{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es6", "dom" ],
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": true,
        "noEmitOnError": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [ "node", "reflect-metadata" ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./scripts/shared/*.ts",
        "./scripts/*.ts",
        "./scripts/pageHeader/*.ts",
        "./scripts/sectionMenu/*.ts",
        "./scripts/comments/*.ts",
        "./scripts/article/*.ts",
        "./scripts/sortedArticleList/*.ts",

        "./typings/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "bin"
    ]
}