{
    "build": {
        "content": [
            {
                "src": "src/content",
                "files": [
                    "**"
                ]
            }
        ],
        "resource": [
            {
                "src": "src/resources",
                "files": [
                    "**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "MyBlog",
            "_appFooter": "<span>Copyright Â© 2017 MyName</span>",
            "_enableSearch": false,
            "jr.enableSearch": true
        },
        "template": [
            "./node_modules/jeremytcd-docfx-themes-basicblog/dist/theme",
            "./src/customizations"
        ],
        "postProcessors": [ "SortedArticleListGenerator", "SearchIndexGenerator" ],
        "noLangKeyword": false
    }
}