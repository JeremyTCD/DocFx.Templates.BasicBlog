{
    "build": {
        "content": [
            {
                "src": "src/content",
                "files": [ "**" ]
            }
        ],
        "resource": [
            {
                "src": "src/resources",
                "files": [ "**" ],
                "dest": "resources"
            },
            {
                "src": "src/misc",
                "files": [ "**" ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "jtcd_websiteName": "Website Name",
            "jtcd_authorName": "Your Name",
            "jtcd_copyrightText": "Â© 2017 Your Name",

            "jtcd_licensesRelPath": "/licenses.html",
            "jtcd_privacyPolicyRelPath": "/privacypolicy.html",
            "jtcd_contactRelPath": "/about.html#contact",
            "jtcd_logoRelPath": "/resources/logo.svg",
            "jtcd_favIconRelPath":  "/resources/favicon.ico"
        },
        "template": [
            "./node_modules/jeremytcd-docfx-themes-mimo/dist/theme",
            "./src/customizations"
        ],
        "postProcessors": [ "SortedArticleListGenerator", "SearchIndexGenerator" ],
        "sitemap": {
            "baseUrl": "https://yourdomain",
            "priority": 0.1,
            "fileOptions": {
                "**/src/content/articles/*.md": {
                    "priority": 1.0
                },
                "**/src/content/articles/allArticles.md": {
                    "priority": 0.1
                }
            }
        }
    }
}