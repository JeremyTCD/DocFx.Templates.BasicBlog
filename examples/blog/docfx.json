{
    "build": {
        "content": [
            {
                "src": "src/content",
                "files": [ "**" ]
            }
        ],
        "resource": [
            {
                "src": "src/resources",
                "files": [ "**" ],
                "dest": "resources"
            },
            {
                "src": "src/misc",
                "files": [ "**" ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "jtcd.websiteName": "Website Name",
            "jtcd.authorName": "Your Name",
            "jtcd.copyrightText": "Â© 2017 Your Name",

            "jtcd.licensesRelPath": "/licenses.html",
            "jtcd.privacyPolicyRelPath": "/privacypolicy.html",
            "jtcd.contactRelPath": "/about.html#contact",
            "jtcd.logoRelPath": "/resources/logo.svg"
        },
        "template": [
            "./node_modules/jeremytcd-docfx-themes-basicblog/dist/theme",
            "./src/customizations"
        ],
        "postProcessors": [ "SortedArticleListGenerator", "SearchIndexGenerator" ],
        "sitemap": {
            "baseUrl": "https://yourdomain",
            "priority": 0.1,
            "fileOptions": {
                "**/src/content/articles/*.md": {
                    "priority": 1.0
                },
                "**/src/content/articles/allArticles.md": {
                    "priority": 0.1
                }
            }
        }
    }
}